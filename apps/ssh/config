Include ~/.ssh/config.local

# SSH config file

## Home servers

Host s-dev01
    HostName fire.kuurstra.com
    Port 22220
    DynamicForward 8083
    ForwardAgent yes

Host s-pi01
    HostName fire.kuurstra.com
    Port 22221
    DynamicForward 8084
    ForwardAgent yes

Host s-ha01
    HostName 192.168.2.222

Host s-run01 s-mon01 s-box01 s-bup01
    ProxyJump s-dev01

Host s-dbs01
    ProxyJump s-run01

## Work

Match exec "[[ '%u' == 'marvink' ]]" Host v-netjump003
    HostName v-netjump003.directory.intra
    User adm_kuurstra
    DynamicForward 8082
    ForwardAgent yes

Match exec "[[ '%u' == 'marvink' ]]"  Host v-netdev001
    User adm_kuurstra
    ProxyJump v-netjump003
    ForwardAgent yes

Match exec "[[ '%u' == 'marvink' ]]" Host v-netfile001,v-netlog001,v-netdb001,v-netmon001,v-jen006,c-itdev*
    User adm_kuurstra
    ProxyJump v-netjump003

## Containerlab

Host clab*
    UserKnownHostsFile /dev/null
    GlobalKnownHostsFile /dev/null
    StrictHostKeyChecking no
    User admin

## Global config

Host *
    # Use SSH agent
    IgnoreUnknown UseKeychain,AddKeysToAgent
    UseKeychain yes
    AddKeysToAgent yes

    # Keep connections alive
    TCPKeepAlive yes
    ServerAliveInterval 30
    ServerAliveCountMax 5

    # # Connection multiplexing
    # ControlMaster auto
    # ControlPath ~/.ssh/%r@%h:%p
