# User specific aliases and functions
function ssh {
  date=$(date +%Y-%m-%d)
  timestamp="$date-$(date +%H%M-%S)"

  log_dir="$HOME/log/$date"
  session_log="$log_dir/${timestamp}_$1.log"

  mkdir -p "$log_dir"
  /usr/bin/ssh $* | tee $session_log | ct
  ansifilter -i "$session_log" -o "$session_log.tmp" 
  mv "$session_log.tmp" "$session_log"
}

